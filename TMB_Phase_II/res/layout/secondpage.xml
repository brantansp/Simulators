<LinearLayout
        android:id="@+id/gridList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/fontgreen"
        android:orientation="vertical" >
    </LinearLayout>
</RelativeLayout>